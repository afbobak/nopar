# /etc/default/nopar

export NOPAR_HOSTNAME=`hostname -f`
export NOPAR_PORT=5984
export NOPAR_HOME=/usr/lib/nopar
export NOPAR_RUN_PATH=/var/run
export NOPAR_RUN_AS=nopar
export NOPAR_REGISTRY_PATH=/var/lib/nopar
export NOPAR_LOGFILE=/var/log/nopar/nopar.log
export NOPAR_LOGLEVEL=info

export NODE_ENV=production
