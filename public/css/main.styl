body {
  margin-top : 60px;
}

.label {
  padding : .3em .6em;
}

.navbar {
  .navbar-inner {
    padding-left : 40px;
    padding-right : 10px;
  }

  .navbar-brand {
    padding-bottom : 0;

    small {
      margin-left : 4px;
      font-size   : 12px;
    }
  }
}

.navbar-form.pull-right {
  padding-right : 0;
}

.navbar-form .input-append {
  margin-bottom : 0;
}

#search_results {
  > li {
    h3 {
      margin-top : 0;
    }
  }
}

ul.packages {
  margin-left : 0;
  padding-left : 0;
  list-style  : none;

  > li {
    margin-bottom : 20px;

    .panel-body {
      .actions {
        float    : right;
        position : relative;
        right    : 0px;
      }

      .details {
        p {
          //padding-left : 15px;
        }

        table th {
          padding-left : 0;
          width        : 100px;
        }
      }
    }
  }
}

ul.versions {
  margin     : 0;
  list-style : none;

  .version {
    margin  : 0;
    padding : 0;

    .label {
      display    : block;
      min-width  : 64px;
      text-align : center;
    }
  }
}

#content {
  margin-bottom : 40px;
}

#footer {
  position   : fixed;
  height     : 40px;

  .container {
    margin-top : 8px;
  }

  .result-info {
    float : left;
  }
  .credit {
    float : right;
  }
}

@media (max-width: 799px) {
  body {
    margin-top : 0;
  }

  .navbar {
    .navbar-inner {
      padding : 0 10px;
    }

    .brand {
      padding-left: 0px;
    }
  }

  #footer .navbar-inner {
    padding-top : 0;
  }
}

@media (max-width: 767px) {
  .navbar .navbar-form input {
    display : inline;
    width   : 120px;
  }

  #footer {
    margin-left  : 0;
    margin-right : 0;
  }
}
